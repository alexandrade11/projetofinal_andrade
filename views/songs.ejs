<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
</head>
<body>
    <%- include("partials/header") %>
    <h3>Tabela de m√∫sicas</h3>
    <table border="2">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Artist</th>
        <th>Album</th>
        <th>Genre</th>
        <th>Duration</th>
        <th>Likes</th>
        <th>Release date</th>
        <th>Deletar</th>

    </tr>
    <br>
    
    <%for(let i=0;i < tabela.length; i++) { %>
    <tr>
        <td><%= tabela[i].id %></td>
        <td><%= tabela[i].title %></td>
        <td><%= tabela[i].artist %></td>
        <td><%= tabela[i].album %></td>
        <td><%= tabela[i].genre %></td>
        <td><%= tabela[i].duration_seconds %></td>
        <td><%= tabela[i].likes %></td>
        <td><%= tabela[i].release_date %></td>
        <td><button id="apagar" onclick="apagar_linha(<%= tabela[i].id%>)">Deletar</button></td>
    </tr>
    <%}%>
    </table>
    <script>
         function apagar_linha(i){
         let id = i   
         axios.delete(`/api/songs/${id}`)
         .then(response =>{
             console.log('Success', response.data);
             location.reload();
         })
         .catch((error)=>{
             console.log('Error:', error)
         })
        }
    
    </script>
</body>
</html>